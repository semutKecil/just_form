    "version": "0.2.0",
    "configurations": [    
        {
            "name": "Run Example as Server",
            "type": "dart",
            "cwd": "example",
            "request": "launch",
            "args": ["-d", "web-server"]
        },

        {
            "name": "just_form",
            "request": "launch",
            "type": "dart"
        },
        {
            "name": "just_form (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "just_form (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        },
        {
            "name": "example",
            "cwd": "example",
            "request": "launch",
            "type": "dart"
        },
        {
            "name": "example (profile mode)",
            "cwd": "example",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "example (release mode)",
            "cwd": "example",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        },

        {
            "name": "example Flutter Web (Wasm)",
            "cwd": "example",
            "type": "dart",
            "request": "launch",
            "args": [
                "-d",
                "chrome", // or "web-server" if you prefer to use the built-in web server
                "--wasm"
            ]
        }
    ]
